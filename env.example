# Appointment booking master channel
APPTBK_MASTER_CHANNEL_ID=C0987654321

# Managed clients admin master channel
MANAGED_ADMIN_MASTER_CHANNEL_ID=C1111111111

# Storm clients admin master channel
STORM_ADMIN_MASTER_CHANNEL_ID=C2222222222

# ClickUp Integration
# ==================

# ClickUp API token for client list management
CLICKUP_API_TOKEN=pk_your_clickup_api_token_here

# Optional Configuration
